<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>Türhan Yıldırım</Authors>
        <Description>Simple EF(Core) Change Tracker base audit log library.</Description>
        <PackageProjectUrl>https://github.com/turhany/Audity</PackageProjectUrl>
        <PackageIcon>audity.png</PackageIcon>
        <RepositoryUrl>https://github.com/turhany/Audity</RepositoryUrl>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageTags>Audit, Log, ChangeTracker</PackageTags>
        <PackageVersion>1.0.16</PackageVersion>
        <TargetFramework>net6.0</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\img\audity.png">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>
        <None Include="..\..\LICENSE">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>
    </ItemGroup>
    
    <ItemGroup>
      <PackageReference Include="Microsoft.EntityFrameworkCore" Version="7.0.9" />
      <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    </ItemGroup>

</Project>
